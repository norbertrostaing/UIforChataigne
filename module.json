{
	"name": "OBS",
	"type": "WebSocket Client",
	"path": "Software",
	
	"version": "0.1",
	"description": "Allow you to control a OBS studio with chataigne",
	"url":"https://github.com/norbertrostaing/UIforChataigne",
	"downloadURL": "https://github.com/norbertrostaing/UIforChataigne/archive/refs/heads/main.zip",
	
	"hasInput": false,
	"hasOutput": false, 

	"hideDefaultCommands": true,
	"hideDefaultParameters": [
		"serverPath",
		"autoAdd",
		"protocol",
		"messageStructure",
		"firstValueIsTheName",
		"useSecureConnection"
	],
	
	"defaults": {
		"protocol":"lines",
		"autoAdd":false,
	},
	
	"parameters": {
		"OBS IP": {
			"type": "String",
			"default": "", 
		}, 
	},
	
	"scripts": [
		"OBS.js"
	],
	
	"values": {
	},
	
	"commands": {
		
		"PlayMedia":
		{
			"menu": "",
			"callback": "OBSPlayMedia",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"PauseMedia":
		{
			"menu": "",
			"callback": "OBSPauseMedia",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"RestartMedia":
		{
			"menu": "",
			"callback": "OBSRestartMedia",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"StopMedia":
		{
			"menu": "",
			"callback": "OBSStopMedia",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"NextMedia":
		{
			"menu": "",
			"callback": "OBSNextMedia",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"PreviousMedia":
		{
			"menu": "",
			"callback": "OBSPreviousMedia",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"SetMediaTime":
		{
			"menu": "",
			"callback": "OBSSetMediaTime",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
				"Time": {
					"type": "Integer",
					"description" : "Time to go to in milliseconds",
					"default": 0, 
					"min":0,
					"useForMapping": true
				}
			}
		},

		"SetVolume":
		{
			"menu": "",
			"callback": "OBSSetVolume",
			"parameters": { 
				"Source Name": {
					"type": "String"
				},
				"Volume": {
					"type": "Float",
					"default": 0, 
					"min" : 0,
					"max" : 1,
					"useForMapping": true
				}
			}
		},

		"SetMute":
		{
			"menu": "",
			"callback": "OBSSetMute",
			"parameters": { 
				"Source Name": {
					"type": "String"
				},
				"Mute": {
					"type": "Boolean",
					"useForMapping": true
				}
			}
		},

		"TakeSourceScreenshot":
		{
			"menu": "",
			"callback": "OBSTakeSourceScreenshot",
			"parameters": { 
				"Source Name": {
					"type": "String"
					},
				"Format": {
					"type": "Enum",
					"useForMapping": true,
					"Options" : {
						"png": "png",
						"jpg": "jpg",
						"jpeg": "jpeg",
						"bmp": "bmp"
						}
					},
				"Path": {
					"type": "String"
				}
			}
		},

		"RefreshBrowserSource": 
		{
			"menu": "",
			"callback": "OBSRefreshBrowserSource",
			"parameters": { 
				"Source Name": {
					"type": "String"
				}, 
			}
		},

		"SetCurrentProfile":
		{
			"menu": "",
			"callback": "OBSSetCurrentProfile",
			"parameters": { 
				"Name": {
					"type": "String"
				}, 
			}
		},

		"StartRecording":
		{
			"menu": "",
			"callback": "OBSStartRecording",
		},

		"StopRecording":
		{
			"menu": "",
			"callback": "OBSStopRecording",
		},

		"PauseRecording":
		{
			"menu": "",
			"callback": "OBSPauseRecording",
		},

		"ResumeRecording":
		{
			"menu": "",
			"callback": "OBSResumeRecording",
		},

		"SetCurrentSceneCollection":
		{
			"menu": "",
			"callback": "OBSSetCurrentSceneCollection",
			"parameters": { 
				"Name": {
					"type": "String"
				}, 
			}
		},

		"SetCurrentScene":
		{
			"menu": "",
			"callback": "OBSSetCurrentScene",
			"parameters": { 
				"Name": {
					"type": "String"
				}, 
			}
		},

		"SetSceneTransitionOverride":
		{
			"menu": "",
			"callback": "OBSSetSceneTransitionOverride",
			"parameters": { 
				"Name": {
					"type": "String"
				}, 
				"Transition Name": {
					"type": "String"
				}, 
				"Transition duration": {
					"type": "Integer",
					"min" : 0
				}, 
			}
		},

		"SetPreviewScene":
		{
			"menu": "",
			"callback": "OBSSetPreviewScene",
			"parameters": { 
				"Name": {
					"type": "String"
				}, 
			}
		},

		"SetCurrentTransition":
		{
			"menu": "",
			"callback": "OBSSetCurrentTransition",
			"parameters": { 
				"Name": {
					"type": "String"
				}, 
			}
		},

		"SetTransitionDuration": 
		{
			"menu": "",
			"callback": "OBSSetTransitionDuration",
			"parameters": { 
				"Name": {
					"type": "Integer",
					"min" : 0
				}, 
			}
		},


	}
}
